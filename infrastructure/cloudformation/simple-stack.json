{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "AutoCloudOps Agent - Simplified Stack",
  "Parameters": {
    "NvidiaApiKey": {
      "Type": "String",
      "NoEcho": true,
      "Description": "NVIDIA NGC API Key"
    }
  },
  "Resources": {
    "S3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Sub": "autocloudops-agent-${AWS::AccountId}-${AWS::Region}"
        },
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls": true,
          "BlockPublicPolicy": true,
          "IgnorePublicAcls": true,
          "RestrictPublicBuckets": true
        }
      }
    },
    "SecretsManager": {
      "Type": "AWS::SecretsManager::Secret",
      "Properties": {
        "Name": "autocloudops-agent-secrets",
        "Description": "NVIDIA NIM API keys",
        "SecretString": {
          "Fn::Sub": "{\"nvidia_api_key\":\"${NvidiaApiKey}\"}"
        }
      }
    },
    "LambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "Policies": [
          {
            "PolicyName": "AutoCloudOpsPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:GetObject",
                    "s3:PutObject",
                    "secretsmanager:GetSecretValue",
                    "cloudwatch:PutMetricData"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "AgentLambda": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "autocloudops-agent",
        "Runtime": "python3.11",
        "Handler": "lambda_function.lambda_handler",
        "Role": {
          "Fn::GetAtt": ["LambdaExecutionRole", "Arn"]
        },
        "Code": {
          "ZipFile": "import json\ndef lambda_handler(event, context):\n    return {'statusCode': 200, 'body': json.dumps('AutoCloudOps Agent Ready!')}"
        },
        "Environment": {
          "Variables": {
            "S3_BUCKET": {
              "Ref": "S3Bucket"
            },
            "SECRETS_ARN": {
              "Ref": "SecretsManager"
            },
            "MODE": "DRY_RUN"
          }
        },
        "Timeout": 300
      }
    }
  },
  "Outputs": {
    "LambdaFunctionName": {
      "Description": "Name of the Lambda function",
      "Value": {
        "Ref": "AgentLambda"
      }
    },
    "S3BucketName": {
      "Description": "Name of the S3 bucket",
      "Value": {
        "Ref": "S3Bucket"
      }
    }
  }
}